<div class="container">
  <div class="row mt-9 d-flex justify-content-between">
    <div class="m-3 bg-light">
      <h5>ショッピングカート</h5>
    </div>
    <div>
      <% unless @cart_items.empty? %>
        <%= link_to "カートを空にする", destroy_all_path(@cart_items), method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered border-dark">
      <thead class="table-secondary">
        <tr>
          <th class="col-md-4">商品名</th>
          <th class="col-md-2">単価(税込)</th>
          <th class="col-md-2">数量</th>
          <th class="col-md-2">小計</th>
          <th class="col-md-2"></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <!--商品画像・商品名-->
            <%= image_tag cart_item.item.get_image, size:"80x60" %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <!--単価(税込)-->
            <%= cart_item.item.with_tax_price.to_s(:delimited) %>
          </td>
          <td>
            <!--数量-->
            <%= form_with model: cart_item do |f| %>
            <%= f.select :count, *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success bt-sm" %>
            <% end %>
          </td>
          <td>
            <!--小計-->
            <%= cart_item.subtotal.to_s(:delimited) %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="row mt-3 ml-3">
    <div class="col-md-8 mb-3">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>

    <div class="col-md-4 pr-0">
    <% @cart_items.each do |cart_item| %>
      <table class="table table-bordered">
        <tr>
          <th class="row table-secondary">合計金額</th>
          <td><%= @total_price += cart_item.subtotal %></td>
        </tr>
      </table>
    </div>
    <% end %>
    <div class="mt-5 text-center">
      <% if @cart_items.present? %>
        <%= link_to "情報入力に進む", new_order_path ,class: "btn btn-success" %>
      <% end %>
    </div>

    </div>
</div>
