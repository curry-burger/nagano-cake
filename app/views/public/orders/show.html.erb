<div class="container mb-3 mx-auto">
  <h4 class="px-3 my-3 text-center col-md-2">注文履歴詳細</h2>
  <div class="row">
    <div class="col-8">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">注文日</th>
          <td><%= l @order.created_at, format: :short %></td>
        </tr>
        <tr>
          <th class="table-active">配送先</th>
          <td><%= @order.address_display %></td>
        </tr>
        <tr>
          <th class="table-active">支払い方法</th>
          <td><%= @order.pay_method %></td>
        </tr>
        <tr>
          <th class="table-active">ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead  class="table-active">
          <tr>
            <th>商品</th>
            <th>単価（税込み）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.item.with_tax_price %></td>
              <td><%= order_item.count %></td>
              <td><%= order_item.sub_total %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tr>
          <th  class="table-active">商品合計</th>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <th  class="table-active">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th  class="table-active">ご請求額</th>
          <td><%= @order.pay_total %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
