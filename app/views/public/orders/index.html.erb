<div class="container" style="margin-bottom: 220px;">
  <div class="row">
    <h2 class="px-3 my-3">注文履歴一覧</h2>
    <table class="table table-bordered my-4">
      <thead class="table table-secondary">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= l order.created_at, format: :short %></td>
            <td><%= order.address_display %></td>
            <td>
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
              <% end %>
            </td>
            <td><%= order.pay_total %>円</td>
            <td><%= order.order_status %></td>
            <td><%= link_to "表示する",order_path(order.id),class:"btn btn-md btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-5 mx-auto"><%= paginate @orders %></div>
  </div>
</div>