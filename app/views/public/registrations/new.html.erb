

<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <tr>
   <h6>名前</h6>
     <div calss="field">
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name, autofocus: true %>
     </div>
  </tr>
  <tr>
   <h6>フリガナ</h6>
     <div class="field">
      <%= f.label :"(セイ)"%>
      <%= f.text_field :last_name_kana, autofocus: true %>
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true %>
     </div>
  </tr>
    <div class="field">
     <%= f.label :"メールアドレス" %>
      <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :post_code, autofocus: true %>
      </div>
       <div class="field">
        <%= f.label :"住所" %>
        <%= f.text_field :address, autofocus: true %>
       </div>
       <div class="field">
         <%= f.label :"電話番号(ハイフンなし)" %>
         <%= f.text_field :phone_number, autofocus: true %>
        </div>
        <div class="field">
         <%= f.label :"パスワード（6文字以上）" %>
         <% if @minimum_password_length %>
         <% end %>
         <%= f.password_field :password %>
       </div>
        <div class="field">
         <%= f.label :"パスワード（確認用）" %>
         <%= f.password_field :password_confirmation %>
       </div>
      <div class="actions">
        <%= f.submit "新規登録" %>
    </div>
  <% end %>

<h4>既に登録済みの方</h4>
<%= render "public/shared/links" %><h4>からログインしてください。</h4>
