<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0 mx-auto my-3" >
    <h3 class="mb-3">会員一覧</h3>
     <table class='table table-hover'>
      <thead>
        <tr class="table-active">
        <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
       <% @customers.each do |customer| %>
        <tr>
          <td><%=  customer.id %></td>
          <td><%= link_to customer.last_name, admin_customer_path(customer) %><%= link_to customer.first_name, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td>
           <% if customer.is_deleted %>
           <p class="text-muted font-weight-bold">退会</p>
           <% else %>
           <P class="text-success font-weight-bold">有効</P>
           <% end %>
           </td>
        </tr>
        <% end %>
      </tbody>
     </table>
   </div>
   <div class="col-5 offset-4"><%= paginate @customers, theme: 'bootstrap-5' %></div>
  </div>
</div>