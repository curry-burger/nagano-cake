<h1>Admin::Items#new</h1>
<h2>商品新規登録</h2>
<div class="container">
  <dl>
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <dt>商品画像</dt>
    <dd><%= f.file_field :item_image %></dd>
    <dt>商品名</dt>
    <dd><%= f.text_field :name %></dd>
    <dt>商品説明</dt>
    <dd><%= f.text_area :description %></dd>
    <dt>ジャンル</dt>
    <dd>
      <!--⬇︎要修正-->
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: true %>
    </dd>
    <dt>税抜価格</dt>
    <dd><%= f.text_field :price %></dd>
    <dt>販売ステータス</dt>
    <dd>
      <!--⬇︎要修正-->
      <!--<= f.collection_check_boxes(:article, :tag_ids, Tag.all, :id, :tag_name) do |b| %> -->
      <!--  <= b.label {b.check_box + b.text} %>-->
      <!--< end %>-->
    </dd>
    <div class="row">
      <%= f.submit '新規登録',class: 'btn btn-success' %>
    </div>
    <% end %>
  </dl>
</div>