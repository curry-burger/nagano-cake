<div class="container">
  <!--<div class="row">-->
    <div class="mt-4">
      <h4><span class="bg-light">商品詳細</span></h4>
      <!--商品詳細データ-->
      <div class="row mt-4">
        <!--商品画像-->
        <div class="col-md-4">
          <%= image_tag @item.item_image, size:"320x240" %>
        </div>
        <div class="col-md-7">
          <table class='table table-borderless'>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td >
            </tr>
            <tr>
              <td class="align-middle">商品説明</td>
              <td><%= @item.description %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td> 税込価格<br />(税抜価格)</td>
              <td class="align-middle"><%= (@item.price*1.1).round.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.status %>
                  <P class="text-success  font-weight-bold">販売中</P>
                <% else %>
                  <p>販売停止中</p>
                <% end %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= link_to "編集する", edit_admin_item_path(@item.id) ,class: "btn btn-success pt-2 pb-2 px-4", 'data-turbolinks': false %></td>
            </tr>
          </table>
        </div>

      </div>
    </div>
  <!--</div>-->
</div>