<style>
 dt{
   width: 30%;
   font-weight: normal;
 }
 dd{width: 70%;}
</style>

<div class="container-lg mt-4" style="width:600px;">
  <h4><span class="bg-light">管理者ログイン</span></h4>
  <div class="container-lg mx-auto mt-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field d-flex mb-3">
        <dt><%= f.label :email %></dt>
        <dd><%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %></dd>
      </div>
      <div class="field d-flex">
        <dt><%= f.label :password %></dt>
        <dd><%= f.password_field :password, autocomplete: "パスワード" %></dd>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions d-flex justify-content-center">
        <%= f.submit "ログイン", class:"btn btn-primary pl-4 pr-4" %>
      </div>
    <% end %>
  
  </div>
  
  <%= render "admin/shared/links" %>

</div>
